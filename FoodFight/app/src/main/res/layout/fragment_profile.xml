<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/profileRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >


        <edu.fhu.foodfight.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:layout_marginTop="5pt"
            android:textAlignment="center"
            android:textSize="15pt"
            android:text="Avery Cupples"/>


        <LinearLayout
            android:id="@+id/profileLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileName"
            android:layout_marginTop="20pt">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:text="Level 57"
            android:textSize="12pt"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:text="314 Points"
            android:textSize="12pt"
            android:gravity="right"
            android:textAlignment="gravity"
            />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/firstRowLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="90pt"
        android:orientation="horizontal"
        android:layout_below="@id/profileLinearLayout"
        android:paddingTop="20pt">
        <TextView
            android:id="@+id/gamesPlayed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/rectangle"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/rectangle"/>


</LinearLayout>

        <LinearLayout
            android:id="@+id/firstRowTextLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="90pt"
            android:layout_below="@id/profileLinearLayout"
            android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_below="@id/profileLinearLayout"
            android:paddingTop="20pt">
            <TextView
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:text="2"
                android:textSize="16pt"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Games Played"
                android:textSize="10pt"
                android:gravity="center"
                />


        </LinearLayout>

            <LinearLayout
                android:id="@+id/hey"
                android:layout_width="0dp"
                android:layout_height="90pt"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_below="@id/profileLinearLayout"
                android:paddingTop="20pt">
                <TextView
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:text="3"
                    android:textSize="16pt"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Wins"
                    android:textSize="10pt"
                    android:gravity="center"
                    />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondRowLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="90pt"
            android:orientation="horizontal"
            android:layout_below="@id/firstRowLinearLayout"
            android:paddingTop="20pt">
            <TextView
                android:id="@+id/averageScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rectangle"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rectangle"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/secondRowTextLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="90pt"
            android:layout_below="@id/firstRowLinearLayout"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_below="@id/firstRowLinearLayout"
                android:paddingTop="20pt">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:text="2"
                    android:textSize="16pt"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Average Score"
                    android:textSize="10pt"
                    android:gravity="center"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90pt"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_below="@id/firstRowLinearLayout"
                android:paddingTop="20pt">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:text="2"
                    android:textSize="16pt"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Average Breakfast Score"
                    android:textSize="10pt"
                    android:gravity="center"
                    />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/thirdRowLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="90pt"
            android:orientation="horizontal"
            android:layout_below="@id/secondRowLinearLayout"
            android:paddingTop="20pt">
            <TextView
                android:id="@+id/averageLunchScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:gravity="center"
                android:background="@drawable/rectangle"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:gravity="center"
                android:background="@drawable/rectangle"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdRowTextLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="90pt"
            android:layout_below="@id/secondRowLinearLayout"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/thirdRowTextLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_below="@id/secondRowLinearLayout"
                android:paddingTop="20pt">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:text="2"
                    android:textSize="16pt"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Average Lunch Score"
                    android:textSize="10pt"
                    android:gravity="center"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90pt"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_below="@id/secondRowLinearLayout"
                android:paddingTop="20pt">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:text="2"
                    android:textSize="16pt"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Average Dinner Score"
                    android:textSize="10pt"
                    android:gravity="center"
                    />


            </LinearLayout>

        </LinearLayout>


        <TextView
        android:id="@+id/bestMealsTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Best Meals"
            android:layout_marginTop="10pt"
        android:layout_below="@id/thirdRowLinearLayout"
            android:textSize="12pt"
        android:gravity="center"/>


        <LinearLayout
            android:id="@+id/bestMealsImages"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bestMealsTextView"
            android:orientation="horizontal">

            <edu.fhu.foodfight.SquareImageView
                android:id="@+id/bestMealBreakfast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/plate7"/>
            <edu.fhu.foodfight.SquareImageView
                android:id="@+id/bestMealLunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/plate7"/>
            <edu.fhu.foodfight.SquareImageView
                android:id="@+id/bestMealDinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/plate7"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bestMealsImagesText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bestMealsImages"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Breakfast"
                android:textSize="12pt"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Lunch"
                android:textSize="12pt"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dinner"
                android:textSize="12pt"/>


        </LinearLayout>


        <TextView
            android:id="@+id/worstMealsTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Worst Meals"
            android:layout_marginTop="10pt"
            android:layout_below="@id/bestMealsImagesText"
            android:textSize="12pt"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/worstMealsImages"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/worstMealsTextView"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/worstMealBreakfast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/plate7"/>
            <ImageView
                android:id="@+id/worstMealLunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/plate7"/>
            <ImageView
                android:id="@+id/worstMealDinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/plate7"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/worstMealsImagesText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/worstMealsImages"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Breakfast"
                android:textSize="12pt"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Lunch"
                android:textSize="12pt"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dinner"
                android:textSize="12pt"/>


        </LinearLayout>




        <!--
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage"
            android:text="Button 1" />
    -->
       
    </RelativeLayout>

</ScrollView>