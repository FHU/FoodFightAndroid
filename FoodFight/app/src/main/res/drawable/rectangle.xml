<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="4dip" android:left="4dip">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke android:color="@color/colorPrimary" android:width="3dip"/>
            <solid
                android:color="@android:color/background_light" />
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:bottom="30dp"
        android:top="2dp">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="ring"
            android:innerRadius="0dp"
            android:thickness="50dp"
            android:useLevel="false">

            <solid android:color="@color/colorPrimary" />

            <size
                android:height="50dp"
                android:width="50dp" />
        </shape>
